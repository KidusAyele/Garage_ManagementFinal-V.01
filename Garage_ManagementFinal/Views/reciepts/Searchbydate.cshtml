@model Garage_ManagementFinal.recipt

@{
    ViewBag.Title = "SearchForm";
    Layout = "~/Views/Shared/_LayoutPage3.cshtml";
}
<head>
    <link rel="stylesheet" href="~/Content/delete.css">
</head>
<div class="confirm-dialog-container">
    <div class="confirm-dialog">
        <h2>Search Reciept By Date</h2>

        @using (Html.BeginForm("SearchFordate", "reciepts"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
         
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label for="searchPhrase">Start Date</label>
                    <div class="col-md-19">
                        <input type="date" name="searchPhrase" id="serchPhrase" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="searchPhrase2">End date</label>
                    <div class="col-md-19">
                        <input type="date" name="searchPhrase2" id="serchPhrase2" class="form-control" />
                    </div>
                </div>

                <br />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-19">
                        <button type="submit" class="btn btn-outline-info">
                            <i class="fas fa-search"></i> <!-- Font Awesome icon -->
                        </button>
                        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-outline-danger", style = "float: right;" })

                    </div>
                </div>
            </div>
        }

        </div>
</div>