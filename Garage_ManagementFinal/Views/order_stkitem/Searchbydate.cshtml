@model Garage_ManagementFinal.order_stkitem

@{
    ViewBag.Title = "SearchForm";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />

    <h2>Search by Name</h2>
    <hr />
    @using (Html.BeginForm("SearchFordate", "order_stkitem"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
          
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label for="searchPhrase">Start Date</label>
                <div class="col-md-5">
                    <input type="date" name="searchPhrase" id="serchPhrase" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label for="searchPhrase2">End date</label>
                <div class="col-md-5">
                    <input type="date" name="searchPhrase2" id="serchPhrase2" class="form-control" />
                </div>
            </div>

            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-5">
                    <button type="submit" class="btn btn-outline-info">
                        <i class="fas fa-search"></i> <!-- Font Awesome icon -->
                    </button>
                    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-outline-danger", style = "float: right;" })

                </div>
            </div>

        </div>
    }

