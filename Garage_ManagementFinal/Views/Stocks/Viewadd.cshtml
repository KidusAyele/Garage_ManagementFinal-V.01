@model Garage_ManagementFinal.Stock

@{
    ViewBag.Title = "Viewadd";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";

}

<head>
    <link rel="stylesheet" href="~/Content/delete.css">
</head>
<div class="confirm-dialog-container">
    <div class="confirm-dialog">
        <h2>Add Stock Item</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
        <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <h5>Name :    @Html.DisplayFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })</h5>
             
            </div>
        
                <div class="form-group">

                    <h6>Quantity</h6> @Html.TextBox("quantity", "", htmlAttributes: new { @class = "form-control" })

                    </div>
             
                    <div class="form-group">
                   <h6>Price</h6>
                            @Html.TextBox("price", "", htmlAttributes : new { @class = "form-control" } )
                        </div>
                    </div>
              
                    <div class="form-group">
                        <h6> Buy Price</h6>  
                            @Html.TextBox("buy_price", "", htmlAttributes: new { @class = "form-control" })
                        </div>
                   

                <hr />

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-outline-success" />
                            @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-outline-danger", style = "float: right;" })

                        </div>
                    </div>
              

        }

    </div>
    </div>
        

 