@model IEnumerable<Garage_ManagementFinal.Entry_Form>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>View All Cars</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="card-body ">
    <table id="datatablesSimple">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Owner_name)
                </th>
                <th>
                  Plate No
                </th>    
                <th>
                  Brand
                </th>

                <th>
                  Phone No
                </th>
                <th>
                   Description
                </th>
                <th>
                   Status
                </th>
                <th>
                  Entry Date
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Owner_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.region)
                        @Html.DisplayFor(modelItem => item.code)
                        @Html.DisplayFor(modelItem => item.Alpha)
                        @Html.DisplayFor(modelItem => item.plate_no)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date)
                    </td>

                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script>
    $(document).ready(function () {
        $('#datatablesSimple').DataTable({
            "ordering": false
        });

    });
    </script>
