@model Garage_ManagementFinal.order_service

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@{

    if (TempData["SuccessMessage"] != null)
    {
        <p class="alert alert-success">
            @TempData["SuccessMessage"]
        </p>
    }
}
<h2>Add Service To Car</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
  

    <div class="centered">
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <label>Service Table Id</label>
                <div class="col-md-5">
                    @Html.DropDownList("service_tableId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.service_tableId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Plate Number</label>

                <div class="col-md-5">
                    @Html.DropDownList("Entry_FormId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Entry_FormId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Quantity</label>
                <div class="col-md-5">
                    @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.quantity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label>Assistant Mechanic</label>

                <div class="col-md-5">
                    @Html.EditorFor(model => model.Assistant_Mechanic, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Assistant_Mechanic, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.date, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @Value = DateTime.Now.ToString() } })
                    @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-5">
                    <input type="submit" value="Create" class="btn btn-info" />
                    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-outline-danger", style = "float: right;" })
                </div>
            </div>
        </div>
        </div>
        }


